import edu.berkeley.guir.prefuse.Display;
a23 13
    public Point2D getLayoutAnchor() {
        Point2D anchor = super.getLayoutAnchor();
        if ( anchor != null )
            return anchor;
        
        double x = 0, y = 0;
        if ( m_registry != null ) {
            Display d = m_registry.getDisplay(0);
            x = d.getWidth()/2; y = d.getHeight()/2;
        }
        return new Point2D.Double(x,y);
    } //
    
